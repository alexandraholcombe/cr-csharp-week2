@{
    Layout="Shared/_Layout.cshtml";
}
<div id="blurb">
    <p>insert text into big box and word into small box</p>
    <p>wordcounter will count how many times the word is in the text</p>
</div>

<form action="results.cshtml" method="post">
    <div class="form-group row">
        <div class="col-md-1">
            <label for="user-input-string">Text</label>
        </div>
        <div class="col-md-11">
            <textarea class="form-control" type="textarea" name="user-input-string" required></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-1">
            <label for="user-input-word">Word</label>
        </div>
        <div class="col-md-11">
            <input class="form-control" type="text" name="user-input-word" required>
        </div>
    </div>
    <button type="submit" class="btn">Count</button>
</form>

</div>
